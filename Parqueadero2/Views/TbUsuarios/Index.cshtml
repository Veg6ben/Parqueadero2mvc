@model IEnumerable<Parqueadero2.Models.TbUsuario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-1 text-primary text-center">Ingresos</h1>

<p>
    <a asp-action="Create">Crear Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.NumeroDePlaca)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="text-center table-primary ">
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
                <td class="text-center table-primary ">
                @Html.DisplayFor(modelItem => item.NumeroDePlaca)
            </td>
                <td class="text-center table-primary ">
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
                <td class="text-center table-primary ">
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
